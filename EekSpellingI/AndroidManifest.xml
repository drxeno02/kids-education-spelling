            android:name="com.blog.ljtatum.eekspellingi.activity.RewardsActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />        
        <activity
            android:name="com.blog.ljtatum.eekspellingi.activity.LetterTreeActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.blog.ljtatum.eekspellingi.activity.PictureDropActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.blog.ljtatum.eekspellingi.activity.SpellingTileActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.blog.ljtatum.eekspellingi.activity.WordMazeActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
    </application>

</manifest>