<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/tree_bg"
    android:orientation="vertical"
    tools:context="${packageName}.${activityClass}"
    tools:ignore="UselessParent,contentDescription" >

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/black_overlay3"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/txt_letter_tree"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_28" />

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:src="@drawable/arrow_back" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:weightSum="1" >

        <LinearLayout
            android:id="@+id/ll_word_bank"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:orientation="vertical"
            android:visibility="gone" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:gravity="center_horizontal"
                android:text="@string/txt_bank"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size_24" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="2dp"
                android:background="@color/black"
                android:gravity="center_horizontal" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:weightSum="0.9" >

                    <ImageView
                        android:id="@+id/iv1"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginBottom="4dp"
                        android:layout_weight="0.1"
                        android:gravity="center_horizontal"
                        android:padding="2dp"
                        android:scaleType="fitXY" />

                    <ImageView
                        android:id="@+id/iv2"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginBottom="4dp"
                        android:layout_weight="0.1"
                        android:gravity="center_horizontal"
                        android:padding="2dp"
                        android:scaleType="fitXY" />

                    <ImageView
                        android:id="@+id/iv3"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginBottom="4dp"
                        android:layout_weight="0.1"
                        android:gravity="center_horizontal"
                        android:padding="2dp"
                        android:scaleType="fitXY" />

                    <ImageView
                        android:id="@+id/iv4"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginBottom="4dp"
                        android:layout_weight="0.1"
                        android:gravity="center_horizontal"
                        android:padding="2dp"
                        android:scaleType="fitXY" />

                    <ImageView
                        android:id="@+id/iv5"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginBottom="4dp"
                        android:layout_weight="0.1"
                        android:gravity="center_horizontal"
                        android:padding="2dp"
                        android:scaleType="fitXY" />

                    <ImageView
                        android:id="@+id/iv6"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginBottom="4dp"
                        android:layout_weight="0.1"
                        android:gravity="center_horizontal"
                        android:padding="2dp"
                        android:scaleType="fitXY" />

                    <ImageView
                        android:id="@+id/iv7"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginBottom="4dp"
                        android:layout_weight="0.1"
                        android:gravity="center_horizontal"
                        android:padding="2dp"
                        android:scaleType="fitXY" />

                    <ImageView
                        android:id="@+id/iv8"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginBottom="4dp"
                        android:layout_weight="0.1"
                        android:gravity="center_horizontal"
                        android:padding="2dp"
                        android:scaleType="fitXY" />

                    <ImageView
                        android:id="@+id/iv9"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_weight="0.1"
                        android:gravity="center_horizontal"
                        android:padding="2dp"
                        android:scaleType="fitXY" />
                </LinearLayout>
            </ScrollView>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_weight="0.2"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_hint"
                    android:textColor="@color/material_grey_700_color_code"
                    android:textSize="@dimen/font_size_20"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="@string/txt_meta"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_20" />
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_tree"
                android:layout_width="240dp"
                android:layout_height="280dp"
                android:layout_below="@id/ll"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="66dp"
                android:paddingRight="20dp"
                android:scaleType="fitXY"
                android:src="@drawable/tree_zero" />

            <LinearLayout
                android:id="@+id/ll_txt_answer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_tree"
                android:layout_centerInParent="true"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="0.9" >

                <com.blog.ljtatum.eekspellingi.anim.ShimmerTextView
                    android:id="@+id/tv_answer_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="4dp"
                    android:layout_weight="0.1"
                    android:gravity="center"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_28"
                    android:visibility="gone" />

                <com.blog.ljtatum.eekspellingi.anim.ShimmerTextView
                    android:id="@+id/tv_answer_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="4dp"
                    android:layout_weight="0.1"
                    android:gravity="center"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_28"
                    android:visibility="gone" />

                <com.blog.ljtatum.eekspellingi.anim.ShimmerTextView
                    android:id="@+id/tv_answer_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="4dp"
                    android:layout_weight="0.1"
                    android:gravity="center"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_28"
                    android:visibility="gone" />

                <com.blog.ljtatum.eekspellingi.anim.ShimmerTextView
                    android:id="@+id/tv_answer_4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="4dp"
                    android:layout_weight="0.1"
                    android:gravity="center"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_28"
                    android:visibility="gone" />

                <com.blog.ljtatum.eekspellingi.anim.ShimmerTextView
                    android:id="@+id/tv_answer_5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="4dp"
                    android:layout_weight="0.1"
                    android:gravity="center"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_28"
                    android:visibility="gone" />

                <com.blog.ljtatum.eekspellingi.anim.ShimmerTextView
                    android:id="@+id/tv_answer_6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="4dp"
                    android:layout_weight="0.1"
                    android:gravity="center"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_28"
                    android:visibility="gone" />

                <com.blog.ljtatum.eekspellingi.anim.ShimmerTextView
                    android:id="@+id/tv_answer_7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="4dp"
                    android:layout_weight="0.1"
                    android:gravity="center"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_28"
                    android:visibility="gone" />

                <com.blog.ljtatum.eekspellingi.anim.ShimmerTextView
                    android:id="@+id/tv_answer_8"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="4dp"
                    android:layout_weight="0.1"
                    android:gravity="center"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_28"
                    android:visibility="gone" />

                <com.blog.ljtatum.eekspellingi.anim.ShimmerTextView
                    android:id="@+id/tv_answer_9"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_weight="0.1"
                    android:gravity="center"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_28"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_edit_answer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_txt_answer"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone"
                android:weightSum="1" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:gravity="center"
                    android:text="@string/txt_input_letter"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_24"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edt_answer_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_weight="0.17"
                    android:gravity="center"
                    android:inputType="text|textCapCharacters|textNoSuggestions"
                    android:maxLength="1"
                    android:maxLines="1"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_28" />

                <Button
                    android:id="@+id/btn_submit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.23"
                    android:background="@drawable/custom_button_a"
                    android:clickable="true"
                    android:text="@string/btn_go"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_22" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_txt_answer"
                android:layout_centerInParent="true"
                android:layout_marginTop="6dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="0.9" >

                <View
                    android:id="@+id/v1"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_marginLeft="4dp"
                    android:layout_weight="0.1"
                    android:background="@color/black"
                    android:visibility="gone" />

                <View
                    android:id="@+id/v2"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_marginLeft="4dp"
                    android:layout_weight="0.1"
                    android:background="@color/black"
                    android:visibility="gone" />

                <View
                    android:id="@+id/v3"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_marginLeft="4dp"
                    android:layout_weight="0.1"
                    android:background="@color/black"
                    android:visibility="gone" />

                <View
                    android:id="@+id/v4"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_marginLeft="4dp"
                    android:layout_weight="0.1"
                    android:background="@color/black"
                    android:visibility="gone" />

                <View
                    android:id="@+id/v5"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_marginLeft="4dp"
                    android:layout_weight="0.1"
                    android:background="@color/black"
                    android:visibility="gone" />

                <View
                    android:id="@+id/v6"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_marginLeft="4dp"
                    android:layout_weight="0.1"
                    android:background="@color/black"
                    android:visibility="gone" />

                <View
                    android:id="@+id/v7"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_marginLeft="4dp"
                    android:layout_weight="0.1"
                    android:background="@color/black"
                    android:visibility="gone" />

                <View
                    android:id="@+id/v8"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_marginLeft="4dp"
                    android:layout_weight="0.1"
                    android:background="@color/black"
                    android:visibility="gone" />

                <View
                    android:id="@+id/v9"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_weight="0.1"
                    android:background="@color/black"
                    android:visibility="gone" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <!-- Banner size: 320x65 -->

    <LinearLayout
        android:id="@+id/ll_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/iv_banner"
            android:layout_width="320dp"
            android:layout_height="65dp"
            android:background="@drawable/banner_batb" />
    </LinearLayout>

</RelativeLayout>