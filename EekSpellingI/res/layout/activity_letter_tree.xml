<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="${packageName}.${activityClass}"
    tools:ignore="UselessParent,contentDescription" >

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/black_overlay3"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/txt_letter_tree"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_28" />

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:src="@drawable/arrow_back" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/rl"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:weightSum="1" >

        <LinearLayout
            android:id="@+id/ll_word_bank"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.8"
            android:orientation="vertical"
            android:visibility="gone" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:gravity="center_horizontal"
                android:text="@string/txt_bank"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size_24" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="2dp"
                android:background="@color/black"
                android:gravity="center_horizontal" />

            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:orientation="vertical"
                    android:weightSum="0.9" >

                    <TextView
                        android:id="@+id/tv1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:layout_weight="0.1"
                        android:gravity="center_horizontal"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_size_34" />

                    <TextView
                        android:id="@+id/tv2"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:layout_weight="0.1"
                        android:gravity="center_horizontal"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_size_34" />

                    <TextView
                        android:id="@+id/tv3"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:layout_weight="0.1"
                        android:gravity="center_horizontal"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_size_34" />

                    <TextView
                        android:id="@+id/tv4"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:layout_weight="0.1"
                        android:gravity="center_horizontal"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_size_34" />

                    <TextView
                        android:id="@+id/tv5"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:layout_weight="0.1"
                        android:gravity="center_horizontal"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_size_34" />

                    <TextView
                        android:id="@+id/tv6"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:layout_weight="0.1"
                        android:gravity="center_horizontal"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_size_34" />

                    <TextView
                        android:id="@+id/tv7"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:layout_weight="0.1"
                        android:gravity="center_horizontal"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_size_34" />

                    <TextView
                        android:id="@+id/tv8"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:layout_weight="0.1"
                        android:gravity="center_horizontal"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_size_34" />

                    <TextView
                        android:id="@+id/tv9"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"
                        android:gravity="center_horizontal"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_size_34" />
                </LinearLayout>
            </ScrollView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="10dp"
            android:layout_weight="0.2"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/iv_tree"
                android:layout_width="240dp"
                android:layout_height="280dp"
                android:layout_gravity="center"
                android:background="@drawable/ph_tree"
                android:scaleType="fitXY" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:weightSum="0.9" >

                <com.blog.ljtatum.eekspellingi.anim.ShimmerTextView
                    android:id="@+id/tv_answer_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="4dp"
                    android:layout_weight="0.1"
                    android:gravity="center"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_28"
                    android:visibility="gone" />

                <com.blog.ljtatum.eekspellingi.anim.ShimmerTextView
                    android:id="@+id/tv_answer_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="4dp"
                    android:layout_weight="0.1"
                    android:gravity="center"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_28"
                    android:visibility="gone" />

                <com.blog.ljtatum.eekspellingi.anim.ShimmerTextView
                    android:id="@+id/tv_answer_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="4dp"
                    android:layout_weight="0.1"
                    android:gravity="center"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_28"
                    android:visibility="gone" />

                <com.blog.ljtatum.eekspellingi.anim.ShimmerTextView
                    android:id="@+id/tv_answer_4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="4dp"
                    android:layout_weight="0.1"
                    android:gravity="center"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_28"
                    android:visibility="gone" />

                <com.blog.ljtatum.eekspellingi.anim.ShimmerTextView
                    android:id="@+id/tv_answer_5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="4dp"
                    android:layout_weight="0.1"
                    android:gravity="center"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_28"
                    android:visibility="gone" />

                <com.blog.ljtatum.eekspellingi.anim.ShimmerTextView
                    android:id="@+id/tv_answer_6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="4dp"
                    android:layout_weight="0.1"
                    android:gravity="center"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_28"
                    android:visibility="gone" />

                <com.blog.ljtatum.eekspellingi.anim.ShimmerTextView
                    android:id="@+id/tv_answer_7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="4dp"
                    android:layout_weight="0.1"
                    android:gravity="center"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_28"
                    android:visibility="gone" />

                <com.blog.ljtatum.eekspellingi.anim.ShimmerTextView
                    android:id="@+id/tv_answer_8"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="4dp"
                    android:layout_weight="0.1"
                    android:gravity="center"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_28"
                    android:visibility="gone" />

                <com.blog.ljtatum.eekspellingi.anim.ShimmerTextView
                    android:id="@+id/tv_answer_9"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_weight="0.1"
                    android:gravity="center"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_28"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:weightSum="0.9" >

                <View
                    android:id="@+id/v1"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_marginLeft="4dp"
                    android:layout_weight="0.1"
                    android:background="@color/black"
                    android:visibility="gone" />

                <View
                    android:id="@+id/v2"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_marginLeft="4dp"
                    android:layout_weight="0.1"
                    android:background="@color/black"
                    android:visibility="gone" />

                <View
                    android:id="@+id/v3"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_marginLeft="4dp"
                    android:layout_weight="0.1"
                    android:background="@color/black"
                    android:visibility="gone" />

                <View
                    android:id="@+id/v4"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_marginLeft="4dp"
                    android:layout_weight="0.1"
                    android:background="@color/black"
                    android:visibility="gone" />

                <View
                    android:id="@+id/v5"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_marginLeft="4dp"
                    android:layout_weight="0.1"
                    android:background="@color/black"
                    android:visibility="gone" />

                <View
                    android:id="@+id/v6"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_marginLeft="4dp"
                    android:layout_weight="0.1"
                    android:background="@color/black"
                    android:visibility="gone" />

                <View
                    android:id="@+id/v7"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_marginLeft="4dp"
                    android:layout_weight="0.1"
                    android:background="@color/black"
                    android:visibility="gone" />

                <View
                    android:id="@+id/v8"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_marginLeft="4dp"
                    android:layout_weight="0.1"
                    android:background="@color/black"
                    android:visibility="gone" />

                <View
                    android:id="@+id/v9"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_weight="0.1"
                    android:background="@color/black"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Banner size: 320x65 -->

    <LinearLayout
        android:id="@+id/ll_banner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/iv_banner"
            android:layout_width="320dp"
            android:layout_height="65dp"
            android:background="@drawable/ph_banner_eek" />
    </LinearLayout>

</RelativeLayout>