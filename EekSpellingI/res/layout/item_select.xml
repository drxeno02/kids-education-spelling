<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context="${packageName}.${activityClass}"
    tools:ignore="UselessParent,contentDescription" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@drawable/custom_layout_a"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="14dp"
                android:text="@string/txt_meta"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_30"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iv_lock"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginRight="6dp"
                android:layout_toLeftOf="@id/tv_title"
                android:scaleType="fitXY"
                android:src="@drawable/lock"
                android:visibility="gone" />
        </RelativeLayout>

        <!-- LTR bubble -->

        <RelativeLayout
            android:id="@+id/rl_left"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/iv_left_bubble"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:scaleType="fitXY"
                android:src="@drawable/ph_speech_bubble_left" />

            <TextView
                android:id="@+id/tv_left_bubble"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:text="@string/txt_meta"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_20"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iv_left_char"
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/iv_left_bubble"
                android:scaleType="fitXY"
                android:src="@drawable/b_character_smile" />
        </RelativeLayout>

        <!-- RTL bubble -->

        <RelativeLayout
            android:id="@+id/rl_right"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/iv_right_bubble"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:scaleType="fitXY"
                android:src="@drawable/ph_speech_bubble_right" />

            <TextView
                android:id="@+id/tv_right_bubble"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:text="@string/txt_meta"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_20"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iv_right_char"
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:layout_alignParentRight="true"
                android:layout_below="@id/iv_right_bubble"
                android:scaleType="fitXY"
                android:src="@drawable/b_character_smile" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>